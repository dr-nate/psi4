set(LIBERD_CONFIG_PATH ${CMAKE_CURRENT_LIST_DIR})
find_library(LIBERD_LIBRARY NAMES erd PATHS ${LIBERD_CONFIG_PATH}/lib 
             NO_DEFAULT_PATH)
find_path(LIBERD_INCLUDE_DIR NAMES ERD/ERD_MANGLE.h 
          PATHS ${LIBERD_CONFIG_PATH}/include NO_DEFAULT_PATH)
if(${LIBERD_LIBRARY} MATCHES LIBERD_LIBRARY-NOTFOUND OR 
   ${LIBERD_INCLUDE_DIR} MATCHES LIBERD_LIBRARY-NOTFOUND)
   set(liberd_FOUND FALSE)
   set(LIBERD_FOUND FALSE)
endif()
add_library(erd INTERFACE)
set(LIBERD_LIBRARIES ${LIBERD_LIBRARY} @CMAKE_Fortran_IMPLICIT_LINK_LIBRARIES@)
target_link_libraries(erd INTERFACE ${LIBERD_LIBRARIES})
set(LIBERD_INCLUDE_DIRS ${LIBERD_INCLUDE_DIR})
target_include_directories(erd INTERFACE ${LIBERD_INCLUDE_DIRS})
set(LIBERD_FOUND TRUE)
set(liberd_FOUND TRUE)
