set(LIBERD_CONFIG_PATH ${CMAKE_CURRENT_LIST_DIR})
find_library(LIBERD_LIBRARY NAMES erd PATHS ${LIBERD_CONFIG_PATH}/lib 
             NO_DEFAULT_PATH)
if(${LIBERD_LIBRARY} MATCHES LIBERD_LIBRARY-NOTFOUND)
   set(liberd_FOUND FALSE)
   set(LIBERD_FOUND FALSE)
endif()
add_library(erd INTERFACE)
target_link_libraries(erd INTERFACE ${LIBERD_LIBRARY} @CMAKE_Fortran_IMPLICIT_LINK_LIBRARIES@)
set(LIBERD_LIBRARIES ${LIBERD_LIBRARY} @CMAKE_Fortran_IMPLICIT_LINK_LIBRARIES@)
set(LIBERD_FOUND TRUE)
set(liberd_FOUND TRUE)
